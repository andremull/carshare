<div class="row">
 <div class="col-md-12">
    <%= image_tag @car.cover_photo(nil),width: "100%"%>
  </div>
  </div>
  <br/>

  <div class="row">
    
    <!--Left panel-->
  <div class="col-md-8">

    <!--Listing name-->
  <div class="row"> 
   <div class="col-md-8 text-center"> 
   <h1> <%= @car.listing_name %> </h1>
   <%=@car.location%>
   </div>

   <div class="col-md-4 text-center"> 
   
    <%= @car.user.fullname %>
   </div>
    
    </div>
    <hr/>
       <!--Listing info-->
 

    <div class="row text-center text-babu">
     <div class="col-md-3"><%= @car.car_type %></div>
    </div>

</div>
    <hr/>


       <!--about-->
  <div class="row"> 
    <div class="col-md-3">
    <h3>About this Listing</h3>
    <p> <%= @car.summary %> </p> 
     </div>
    </div>
    <hr/>
       <!--carosel-->
  <div class="row"> 

    <% if @photos.length > 0 %>
     <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <%end%>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @photos.each do |photo| %>
    <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
   <% @photos.each do |photo| %>

    <div class="item <%= 'active' if photo.id == @photos[0].id %>">
      <%= image_tag photo.image.url()%>
    </div>
   <% end %>
  </div>

    
    

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
    
    </div>
    <hr/>



    <!-- Google Map -->
    <div class="row">
    
    <div id="map" style="width:100%; height:400px"></div>

       
        <script src="https://maps.googleapis.com/maps/api/js"></script>

        <script>
            function initialize() {
                var location = {lat: <%= @car.latitude%>,lng: <%= @car.longitude%>};
                var map = new google.maps.Map(document.getElementById('map'),{
                    center: location,
                    zoom: 14
                });
                var marker = new google.maps.Marker({
                    position: location,
                    map: map
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>

    </div>
    <hr/>
    </div>
    <!-- Near by -->
		<div class="row">
            <h3>Near by</h3>
			<% for car in @car.nearbys(10) %>
				
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading preview">
							<%= image_tag car.cover_photo(:original) %>
						</div>
						<div class="panel-body">
							<%= link_to car.listing_name, car %><br>
							(<%= car.distance.round(2) %> Km's away)
						</div>
					</div>
				</div>

			<% end %>
		</div>


	</div>
</div>


</div>
   <!--Right panel-->
  <div class="col-md-4">
  
  <%= render 'reservations/form'%>

  </div>
  </div>