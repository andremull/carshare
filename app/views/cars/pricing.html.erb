<div class="row">
  <div class="col-md-3">
    <%= render 'car_menu' %>

  </div>

    <div class="col-md-9">

    <div class="panel panel-default">

    <div class="panel-heading">
    Pricing
    </div>

                <div class="panel-body">
            <div class="container">        

            <%= form_for @car do |f| %>

            <div class="row">
           <div class="form-group">

            <label>Price</label>
            <%=f.text_field :price, placeholder: "eg: $100", class: "form-control", required: true %> 

            <div class="text-center">

                <%= f.submit "save", class: "btn btn-form"%>
              <%end%>
            </div>
               
        </div>           
      </div>
    </div>
  </div>
</div>