<ul class="sidebar-list">

    <li class="sidebar-item">
     <%= link_to "Listing", listing_car_path, class: "sidebar-link active"%>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    </li>

     <li class="sidebar-item">
     <%= link_to "pricing", pricing_car_path, class: "sidebar-link active"%>
     <% if !@car.price.blank?%>
     <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
     <%end%>
    </li>

     <li class="sidebar-item">
     <%= link_to "description", description_car_path, class: "sidebar-link active"%>
     <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    </li>

     <li class="sidebar-item">
     <%= link_to "Photos", photo_upload_car_path, class: "sidebar-link active"%>
        <% if !@car.photos.blank?%>
     <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
     <%end%>
    </li>

     <li class="sidebar-item">
     <%= link_to "Location", location_car_path, class: "sidebar-link active"%>
        <% if !@car.location.blank?%>
     <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
     <%end%>
    </li>
</ul>
<hr/>

<% is_ready = !@car.active && !@car.price.blank? && !@car.listing_name.blank? && !@car.photos.blank? && !@car.location.blank?%>

<%= form_for @car do |f| %>
<%= f.hidden_field :active, value: true %>
<%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>



<%end%>